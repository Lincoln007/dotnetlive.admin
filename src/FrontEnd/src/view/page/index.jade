extends ../common/base.jade
block content
    #root(style="width:100%;height:100%;display:none")
block script 
    -if(debug)
        script#loadscript(type= 'text/javascript').  
            document.write("<script src='index.js'><\/script>");
            document.body.removeChild(document.getElementById("loadscript"));
    - else
        script#loadscript(type= 'text/javascript'). 
            var rd=new Date().getTime();
            document.write("<script src='common.js?rd=" + rd + " '><\/script>");
            document.write("<script src='index.js?rd=" + rd  + "'><\/script>");
            document.body.removeChild(document.getElementById("loadscript"));